<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="2dp">


    <android.support.v7.widget.CardView
        android:id="@+id/item_list_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        >
        <com.daimajia.swipe.SwipeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/swipe_list_item">

            <!-- Bottom View Start-->
            <LinearLayout
            android:orientation="horizontal"
            android:background="#66ddff00"
            android:id="@+id/bottom_wrapper"
            android:layout_width="200dp"

            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/swipe_set_expiration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#002B7F"
                    android:src="@drawable/ic_schedule_white_24dp"/>

                <ImageView
                    android:id="@+id/swipe_send_to_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FCD116"
                    android:src="@drawable/ic_shopping_basket_white_24dp"/>

                <ImageView
                    android:id="@+id/swipe_delete"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#CE1126"
                    android:src="@drawable/ic_delete_forever_white_24dp"/>
            <!--What you want to show-->
        </LinearLayout>

            <!-- Bottom View End-->

            <!-- Surface View Start -->
            <LinearLayout
                android:padding="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--What you want to show in SurfaceView-->
                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:padding="16dp"
                    android:paddingLeft="8dp"
                    android:text="Test Text"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    />
            </LinearLayout>
            <!-- Surface View End -->
        </com.daimajia.swipe.SwipeLayout>




    </android.support.v7.widget.CardView>


</LinearLayout>



